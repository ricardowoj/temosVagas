<%- include('header') %>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
    integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

<br>
<h3><span class="badge badge-info">Criar nova vaga</span></h3>

<br>
<div>
    <form method="post">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Título:</span>
            </div>
            <input type="text" class="form-control" placeholder="Insira o título da vaga." aria-describedby="basic-addon1" name="titulo">
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Descrição:</span>
            </div>
            <textarea class="form-control" placeholder="Descreva a vaga." name="descricao"></textarea>
        </div>
        <br>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Categoria</label>
            </div>
            <select class="custom-select" id="inputGroupSelect01" name="categoria">
                <option selected>Escolha a categoria</option>
                <% categorias.forEach( categoria => { %>
                <option value="<%= categoria.id %>"><%= categoria.categoria %></option>
                <% }) %>
            </select>
        </div>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </form>
</div>

<%- include('footer') %>